{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "outDir": "./dist/js",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,     // Meilleure interopérabilité avec les modules CommonJS
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["ESNext", "DOM"],
    // "noEmit": true
  //  "allowJs": true
  },
  "include": ["**/*.ts", "**/*.d.ts"],
  "exclude": ["node_modules", "dist"]
}