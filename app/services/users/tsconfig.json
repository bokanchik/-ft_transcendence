{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "rootDir": "./",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "allowJs": true,
  },
  "include": ["**/*.ts", "**/*.d.ts", "../../frontend/conf/utils/config.ts"],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
