      "target": "ES2022",
      "module": "nodenext", // the latest Node.js version
      "moduleResolution": "nodenext",
      "strict": true,
      "noEmit": true,
      "allowImportingTsExtensions": true,
      "noImplicitAny": false,
      "allowJs": true,
    },
    "include": ["./**/*.ts"],
}